apiVersion: apps/v1
kind: Deployment
metadata:
  name: nextjs-app
  namespace: frontend
spec:
  replicas: 3
  selector:
    matchLabels:
      app: nextjs-app
  template:
    metadata:
      labels:
        app: nextjs-app
    spec:
      containers:
      - name: nextjs-app
        image: myregistry.com/nextjs-app:latest
        ports:
        - containerPort: 3000
